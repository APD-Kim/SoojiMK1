  <body>
    <!-- 수정 모달창 -->
    <div id="edit-modal" class="modal">
      <div class="modal-box rq" >
        <form action="/review/edit" method="POST" id="edit-form"></form>
        <p>이름</p>
      <input type="text" name="name" id="edit-name">
      <p>평점</p>
      <input type="text" id="edit-rating">
      <p>내용</p>
      <textarea name="text" id="edit-text"></textarea>
      <button id="edit-btn" type="submit">수정하기</button>
      <span class="close" id="close-btn">&times;</span>
    </div>
    </div>
    <div id="myModal" class="modal">
      <!-- 모달 컨텐츠 -->
      <div class="modal-box">
        <div class="modal-image"></div>
        <div class="modal-content"></div>
        </div>
        <div class="modal-box2"><div class="middle">
          <div class="choose-rating">
            <p>별점을 선택해주세요</p>
            <div class="rating">
              <span class="rating__result"></span> 
              <i class="rating__star far fa-star"></i>
              <i class="rating__star far fa-star"></i>
              <i class="rating__star far fa-star"></i>
              <i class="rating__star far fa-star"></i>
              <i class="rating__star far fa-star"></i>
          </div>
            <p></p>
            <form class="input-box" action="/review" method="POST">
              <p>닉네임</p>
              <input type="text" id="nickname" name="name"></input>
              <p>비밀번호</p>
              <input type="password" id="password" name="password"></input>
              <p>리뷰 내용</p>
              <span name=></span>
              <textarea type="text" id="review-text" name="text"></textarea>
              <input type="hidden" id="starCountInput" name="rating">
              <button type="submit" id="access-btn">등록</button>
            </form>
          </div>
      </div>
      </div>
      <!-- 리뷰 박스 -->
      <div class="modal-box3">
        <!-- 기능개발 후 지울 것 -->
        <% for (let i = 0; i < review.length; i++)  {%>
        <div class="review-box">
          <p><%= review[i].name %></p>
          <p>평점 : <%= review[i].rating %></p>
          <p><%= review[i].text %></p>
          <button class="edit-review">수정</button>
          <button class="delete-review">삭제</button>
          <input class="edit-password" type="password" data-password="<%= review[i].password %>">
          <input class="id" type="hidden" data-id=<%= review[i]._id %>>
        </div>
        <% }%>
        
        <!-- 기능개발 후 지울 것 -->
      </div>
      
    </div>
